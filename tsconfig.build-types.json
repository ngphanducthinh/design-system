{
  "include": ["src/**/*"],
  "exclude": [
    "src/App.vue",
    "src/main.ts",
    "src/e2e",
    "src/playground",
    "src/tests",
    "src/stories",
    ".storybook/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2018", "DOM"],
    "skipLibCheck": true
  }
}
